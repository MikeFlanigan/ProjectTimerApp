<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusableInTouchMode="true"
    tools:context="com.example.mike.flighttime.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Timer1Name"
        android:ems="10"
        android:id="@+id/Timer1Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:imeOptions="actionDone"/>

    <TextView
        android:id="@+id/timer1HValue"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="@color/Cyan"
        android:textSize="40sp"
        android:text="0.00"
        android:layout_below="@+id/Timer1Name"
        android:layout_alignLeft="@+id/Timer1Name"
        android:layout_alignStart="@+id/Timer1Name"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp" />

    <Button
        android:id="@+id/T1startButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="@string/startButtonLabel"
        android:layout_alignBaseline="@+id/T1saveButton"
        android:layout_alignBottom="@+id/T1saveButton"
        android:layout_alignLeft="@+id/Timer1Name"
        android:layout_alignStart="@+id/Timer1Name" />

    <Button
        android:id="@+id/T1saveButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="save"
        android:layout_below="@+id/timer1HValue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/T1ResetButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="@string/ResetButtonLabel"
        android:layout_alignBaseline="@+id/T1saveButton"
        android:layout_alignBottom="@+id/T1saveButton"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Timer2Name"
        android:ems="10"
        android:id="@+id/Timer2Name"
        android:layout_below="@+id/T1saveButton"
        android:layout_alignLeft="@+id/T1startButton"
        android:layout_alignStart="@+id/T1startButton"
        android:layout_marginTop="24dp"
        android:imeOptions="actionDone"/>

    <TextView
        android:id="@+id/timer2HValue"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="@color/Cyan"
        android:textSize="40sp"
        android:text="0.00"
        android:layout_below="@+id/Timer2Name"
        android:layout_alignLeft="@+id/Timer2Name"
        android:layout_alignStart="@+id/Timer2Name"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp" />

    <TextView
        android:id="@+id/timer2SValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="@color/Cyan"
        android:textSize="40sp"
        android:text="00"
        android:layout_below="@+id/Timer2Name"
        android:layout_toRightOf="@+id/timer2HValue"
        android:layout_toEndOf="@+id/timer2HValue"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/T2startButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="@string/startButtonLabel"
        android:layout_alignBaseline="@+id/T2saveButton"
        android:layout_alignBottom="@+id/T2saveButton"
        android:layout_alignLeft="@+id/Timer2Name"
        android:layout_alignStart="@+id/Timer2Name" />

    <Button
        android:id="@+id/T2saveButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="save"
        android:layout_below="@+id/timer2HValue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/T2ResetButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="@string/ResetButtonLabel"
        android:layout_alignBaseline="@+id/T2saveButton"
        android:layout_alignBottom="@+id/T2saveButton"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/timer3HValue"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="@color/Cyan"
        android:textSize="40sp"
        android:text="0.00"
        android:layout_below="@+id/Timer3Name"
        android:layout_alignLeft="@+id/Timer3Name"
        android:layout_alignStart="@+id/Timer3Name"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp" />

    <TextView
        android:id="@+id/timer3SValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="@color/Cyan"
        android:textSize="40sp"
        android:text="00"
        android:layout_below="@+id/Timer3Name"
        android:layout_toRightOf="@+id/timer3HValue"
        android:layout_toEndOf="@+id/timer3HValue"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/T3startButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="@string/startButtonLabel"
        android:layout_alignBaseline="@+id/T3saveButton"
        android:layout_alignBottom="@+id/T3saveButton"
        android:layout_alignLeft="@+id/Timer3Name"
        android:layout_alignStart="@+id/Timer3Name" />

    <Button
        android:id="@+id/T3saveButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="save"
        android:layout_below="@+id/timer3HValue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/T3ResetButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="@string/ResetButtonLabel"
        android:layout_alignBaseline="@+id/T3saveButton"
        android:layout_alignBottom="@+id/T3saveButton"
        android:layout_alignParentRight="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Timer3Name"
        android:ems="10"
        android:id="@+id/Timer3Name"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/T2saveButton"
        android:layout_alignLeft="@+id/T2startButton"
        android:layout_alignStart="@+id/T2startButton"
        android:imeOptions="actionDone"/>

    <TextView
        android:id="@+id/timer1SValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="@color/Cyan"
        android:textSize="40sp"
        android:text="00"
        android:layout_below="@+id/Timer1Name"
        android:layout_toRightOf="@+id/timer1HValue"
        android:layout_toEndOf="@+id/timer1HValue"
        android:layout_marginLeft="80dp"/>
</RelativeLayout>



